<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>@Document.GetString("PageTitle")</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?">
    <link rel="manifest" href="/site.webmanifest">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="/styles/l5r.css" rel="stylesheet" >
</head>

<body>
    <!-- Navigation -->
    @RenderSectionOrPartial("TopNav", "_topNav")

    <!-- Main Content -->
    <div class="container-fluid">
  
        <div class="row">
            

            <div class="col-lg-3 l5r-main-nav">
                <!-- Side Nav / Slide-In Nav -->
                @RenderSectionOrPartial("MainNav", "_mainNav")
            </div>
            
            <div id="content" class="col-md-12 col-lg-6 col-xl-6 col-xxl-6"  >
                @{
                    if (!Document.GetBool("NoHeader"))
                    {
                        <h4 class="display-4">@Document.GetString("Title")</h4>
                    }
                }

                @* @RenderSectionOrPartial("TableOfContents", "_toc") *@
                @RenderBody()
            </div>
            <div class="col-lg-3 l5r-toc">
                @RenderSectionOrPartial("TableOfContents", "_toc")
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>