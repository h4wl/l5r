<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>@Document.GetString("PageTitle")</title>

    <link rel="shortcut icon" href="@Context.GetLink("/favicon.ico?")" type="image/x-icon">
    <link rel="icon" href="@Context.GetLink("/favicon.ico?")" type="image/x-icon">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link href="/styles/l5r.css" rel="stylesheet" >
</head>

<body>
    <!-- Navigation -->
    @RenderSectionOrPartial("TopNav", "_topNav")

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            

            <div class="col-lg-3 col-xl-2">
                <!-- Side Nav / Slide-In Nav -->
                @RenderSectionOrPartial("MainNav", "_mainNav")
            </div>
            <div id="content" class="col-md-12 col-lg-9 col-xl-7 col-xxl-6">
                @{
                    if (!Document.GetBool("NoHeader"))
                    {
                        <h4 class="display-4">@Document.GetString("Title")</h4>
                        <hr />
                    }
                }
                
                @RenderSectionOrPartial("TableOfContents", "_toc")
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
</body>

</html>